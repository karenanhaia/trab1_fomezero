<p id="notice"><%= notice %></p>

<h1>Restaurantes</h1>
<%= link_to 'Novo Restaurante', new_restaurant_path, :class => "btn btn-default" %>
<br><br>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereço</th>
      <th>Número de Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phonenumber %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Mostrar', restaurant, :class => "btn btn-default" %></button>
            <%= link_to 'Editar', edit_restaurant_path(restaurant), :class => "btn btn-default" %>
            <%= link_to 'Excluir', restaurant, :class => "btn btn-default", method: :delete, data: {confirm: 'Are you sure?'} %></button>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

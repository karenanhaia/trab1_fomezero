<p id="notice"><%= notice %></p>

<h1>Ingredientes</h1>
<%= link_to 'Novo Ingrediente', new_ingredient_path, :class => "btn btn-default" %>
<br><br>

<table class="table">
  <thead>
    <tr>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.description %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Mostrar', ingredient, :class => "btn btn-default" %></button>
            <%= link_to 'Editar', edit_ingredient_path(ingredient), :class => "btn btn-default" %>
            <%= link_to 'Excluir', ingredient, :class => "btn btn-default", method: :delete, data: {confirm: 'Are you sure?'} %></button>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

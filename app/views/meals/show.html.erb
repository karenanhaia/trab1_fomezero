<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="col-md-3">
    <div class="panel panel-default panel-meal">
      <h2>Descrição: <%= @meal.description %></h2>
      <h4>Preço: R$ <%= @meal.price %></h4>
      <p>Restaurante: <%= @meal.restaurant.name %></p>
      <small>Tempo de Produção: <%= @meal.productiontime %></small>
      <br>
      <small>Ingredientes: <%= @meal.ingredients.map(&:description).join(', ') %></small>
    </div>

    <%= link_to 'Editar', edit_meal_path(@meal), :class => "btn btn-warning" %>
    <%= link_to 'Voltar', meals_path, :class => "btn btn-primary" %>
  </div>
</div>

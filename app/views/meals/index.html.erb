<p id="notice"><%= notice %></p>

<h1>Refeições</h1>
<%= link_to 'Nova Refeição', new_meal_path, :class => "btn btn-default" %>
<br><br>

<table class="table">
  <thead>
    <tr>
      <th>Restaurante</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Tempo de Produção</th>
      <th>Ingredientes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.restaurant.name %></td>
        <td><%= meal.description %></td>
        <td><%= meal.price %></td>
        <td><%= meal.productiontime %></td>
        <td><%= meal.ingredients.map(&:description).join(', ') %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Mostrar', meal, :class => "btn btn-default" %></button>
            <%= link_to 'Editar', edit_meal_path(meal), :class => "btn btn-default" %>
            <%= link_to 'Excluir', meal, :class => "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


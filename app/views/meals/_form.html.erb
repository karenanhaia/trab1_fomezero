<%= form_with(model: meal, local: true) do |form| %>
  <% if meal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul>
      <% meal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :restaurant_id %>
    <%= form.select :restaurant_id, Restaurant.all.collect {|restaurant| [restaurant.name, restaurant.id]} %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :meal_description %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :meal_price %>
  </div>

  <div class="field">
    <%= form.label :productiontime %>
    <%= form.text_field :productiontime, id: :meal_productiontime %>
  </div>

  <div class="field">
    <%= form.collection_check_boxes(:ingredient_ids, Ingredient.all, :id, :description, checked: meal.ingredients.map(&:id)) do |i| %>
      <%= i.check_box %> <%= i.label %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
